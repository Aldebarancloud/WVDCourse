{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "NvidiaVMsize": {
            "type": "string",
            "metadata": {
                "description": "The size of the Nvidia VM"
            },
            "defaultValue": "Standard_NV6",
            "allowedValues": [
                "Standard_NC6s",
                "Standard_NC12s",
                "Standard_NC24s",
                "Standard_NC24rs",
                "Standard_NC6s_v2",
                "Standard_NC12s_v2",
                "Standard_NC24s_v2",
                "Standard_NC24rs_v2",
                "Standard_NC6s_v3",
                "Standard_NC12s_v3",
                "Standard_NC24s_v3",
                "Standard_NC24rs_v3",
                "Standard_NV6s",
                "Standard_NV12s",
                "Standard_NV24s",
                "Standard_NV6s_v2",
                "Standard_NV12s_v2",
                "Standard_NV24s_v2",
                "Standard_NV12s_v3",
                "Standard_NV24s_v3",
                "Standard_NV48s_v3",
                "Standard_NC4as-T4_v3",
                "Standard_NC8as-T4_v3",
                "Standard_NC16as-T4_v3",
                "Standard_NC64as-T4_v3",
                "Standard_ND6s",
                "Standard_ND12s",
                "Standard_ND24s",
                "Standard_ND24rs",
                "Standard_ND40rs_v2",
                "Standard_NC6",
                "Standard_NC12",
                "Standard_NC24",
                "Standard_NC24r",
                "Standard_NC6_v2",
                "Standard_NC12_v2",
                "Standard_NC24_v2",
                "Standard_NC24r_v2",
                "Standard_NC6_v3",
                "Standard_NC12_v3",
                "Standard_NC24_v3",
                "Standard_NC24r_v3",
                "Standard_NV6",
                "Standard_NV12",
                "Standard_NV24",
                "Standard_NV6_v2",
                "Standard_NV12_v2",
                "Standard_NV24_v2",
                "Standard_NV12_v3",
                "Standard_NV24_v3",
                "Standard_NV48_v3"
            ]
        },
        "NvidiaVMDisktype":{
            "defaultValue": "StandardSSD_LRS",
            "allowedValues": [
                "Premium-LRS",
                "StandardSSD_LRS"
            ],
            "type": "string",
            "metadata": {
                "description": "The VM disk type SSD Standard or SSD Premium"
            }
        },
        
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        }
    },
    "variables": {
        "GoldenImageName": "Golden-VM",
        "GoldenImagenetworkInterfaceName": "Golden-Nic",
        "virtualMachineComputerName": "Golden-VM",
        "patchMode": "AutomaticByOS",
        "enableHotpatching": "false",
        "GoldenvirtualNetworkName": "Golden-vnet",
        "GoldensubnetName": "Golden-subnet",
        "publicIpAddressName": "GoldenPip",
        "publicIpAddressType": "Dynamic",
        "publicIpAddressSku": "Basic",
        "networkSecurityGroupName": "golden-nsg",
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]",
        "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', variables('GoldenvirtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', variables('GoldensubnetName'))]",
        "TeamsInstallUri": "https://raw.githubusercontent.com/Aldebarancloud/WVDCourse/main/Lab5GoldenImageConfiguration/GoldenImageConfiguration/TeamsforWVD/TeamsForWVDv4gc.ps1"
    },
    "resources": [
        {
            "name": "[variables('GoldenImagenetworkInterfaceName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', variables('GoldenvirtualNetworkName'))]",
                "[concat('Microsoft.Network/publicIpAddresses/', variables('publicIpAddressName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', variables('publicIpAddressName'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                }
            }
        },
        {
            "name": "[variables('networkSecurityGroupName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-02-01",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name":"default-allow-rdp",
                        "properties": {
                            "priority": 300,
                            "sourceAddressPrefix": "*",
                            "protocol": "Tcp",
                            "destinationPortRange": "3389",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('GoldenvirtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-09-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.1.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('GoldensubnetName')]",
                        "properties":{
                            "addressPrefix": "10.1.0.0/24"
                        }
                    }
                ]
                
            }
        },
        {
            "name": "[variables('publicIpAddressName')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2019-02-01",
            "location": "[parameters('location')]",
            "properties": {
                "publicIpAllocationMethod": "[variables('publicIpAddressType')]"
            },
            "sku": {
                "name": "[variables('publicIpAddressSku')]"
            }
        },
        {
            "name": "[variables('GoldenImageName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2020-12-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('GoldenImagenetworkInterfaceName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('NvidiaVMsize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('NvidiaVMDisktype')]"
                        }
                    },
                    "imageReference": {
                        "publisher": "microsoftwindowsdesktop",
                        "offer": "office-365",
                        "sku": "20h2-evd-o365pp",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('GoldenImagenetworkInterfaceName'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[variables('virtualMachineComputerName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true,
                        "patchSettings": {
                            "enableHotpatching": "[variables('enableHotpatching')]",
                            "patchMode": "[variables('patchMode')]"
                        }
                    }
                },
                "licenseType": "Windows_Client",
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            }
        },
        {
            "name": "microsoft.nvidia-gpu-driver-windows-20210622115144",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://catalogartifact.azureedge.net/publicartifactsmigration/microsoft.nvidia-gpu-driver-windows-arm.1.1.0/Artifacts/MainTemplate.json"
                },
                "parameters": {
                    "vmName": {
                        "value": "gcuextention"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', variables('GoldenImageName'))]"
            ]
        },
        {
            "name": "microsoft.antimalware-windows-20210622115245",
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://catalogartifact.azureedge.net/publicartifactsmigration/microsoft.antimalware-windows-arm.1.0.2/Artifacts/MainTemplate.json"
                },
                "parameters": {
                    "vmName": {
                        "value": "gcuextention"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "RealtimeProtectionEnabled": {
                        "value": "true"
                    },
                    "ScheduledScanSettingsIsEnabled": {
                        "value": "false"
                    },
                    "ScheduledScanSettingsScanType": {
                        "value": "Quick"
                    },
                    "ScheduledScanSettingsDay": {
                        "value": "7"
                    },
                    "ScheduledScanSettingsTime": {
                        "value": "120"
                    }
                }
            },
            "dependsOn": [
                "microsoft.nvidia-gpu-driver-windows-20210622115144"
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2019-03-01",
            "name": "[concat(variables('GoldenImageName'), '/scriptextension')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', variables('GoldenImageName'))]"
            ],
            "properties": {
                "autoUpgradeMinorVersion": true,
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.9",
                "settings": {
                    "fileUris": [
                        "[variables('TeamsInstallUri')]"
                    ],
                    "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File TeamsForWVDv4gc.ps1')]"

                },
                "protectedSettings": {
                }
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}